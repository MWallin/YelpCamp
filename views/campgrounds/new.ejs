<% include ../partials/header %>


  <div class="container">

    <div class="row">


      <!-- Add new campground -->
      <h1 style="text-align: center">Create a new campground</h1>

      <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST">

          <div class="form-group">
            <input class="form-control" type="text" placeholder="Campground name" name="campName">
          </div>

          <div class="form-group">
            <input class="form-control" type="text" placeholder="Enter a short description" name="campDesc">
          </div>

          <div class="form-group">
            <input class="form-control" type="text" placeholder="Image link" name="campImage">
          </div>

          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Add campground</button>
          </div>

        </form>

        <a href="/campgrounds">Back to campgrounds</a>

      </div>

    </div>

  </div>


<% include ../partials/footer %>