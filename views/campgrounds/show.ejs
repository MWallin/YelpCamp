<% include ../partials/header %>


  <div class="container">

    <div class="row">

      <!-- ################################################################### -->
      <!-- ################################################################### -->
      <!-- Sidebar -->
      <div class="col-md-3">

        <p class="lead">Yelp Camp</p>

        <a class="btn btn-info" href="/campgrounds">Back to campgrounds</a>

        <hr>

        <div class="list-group">

          <li class="list-group-item active">Info 1</li>
          <li class="list-group-item">Info 2</li>
          <li class="list-group-item">Info 3</li>

        </div>

        <p>MAP</p>

      </div>
      <!-- ################################################################### -->

      <!-- ################################################################### -->
      <!-- ################################################################### -->
      <!-- Main content -->
      <div class="col-md-9">

        <!-- ################################################################# -->
        <!-- ################################################################# -->
        <!-- Campground data -->
        <div class="thumbnail">


          <img class="img-responsive" src="<%=campground.image%>" alt="">

          <div class="caption-full">

            <h4 class="pull-right">PRICE</h4>

            <h4><a href=""><%=campground.name%></a></h1>

            <p><%=campground.description%></p>

            <p><em>
              Submitted by <%= campground.creator.username %>
            </em></p>

            <% if (currentUser && campground.creator.id.equals(currentUser._id)) { %>

              <a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">
                Edit
              </a>

              <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
              </form>

            <% } %>


          </div>


        </div>
        <!-- ################################################################# -->

        <!-- ################################################################# -->
        <!-- ################################################################# -->
        <!-- Comment data -->
        <div class="well">


          <div class="text-right">

            <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">
              Add new comment
            </a>

          </div>

          <hr>

          <% campground.comments.forEach( comment => { %>

            <div class="row">

              <div class="col-md-12">

                <strong>
                  <%= comment.author.username %>
                </strong>

                <span class="pull-right">X days ago</span>

                <p>
                  "<%= comment.text %>"
                </p>

                <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>

                    <a class="btn btn-xs btn-warning" href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">
                    Edit
                  </a>

                  <form class="delete-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-xs btn-danger">Delete</button>
                  </form>

                <% } %>

              </div>

            </div>

          <% }) %>


        </div>
        <!-- ################################################################# -->


      </div>
      <!-- ################################################################### -->

    </div>

  </div>


<% include ../partials/footer %>